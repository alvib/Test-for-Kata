import java.util.Scanner;

public class Main {
    static String message ="";
    public static void main(String[] args) throws Exception {
        calc(message);
        calculate();
    }
    static void calculate() throws Exception {
        int a = 0;
        int b = 0;
        String[] actions = {"+", "-", "/", "*"};
        String[] regexActions = {"\\+", "-", "/", "\\*"};
        int actionIndex=-1;
        for (int i = 0; i < actions.length; i++) {
            //показываю, что наше сообщение содержит оператор из массива
            if(message.contains(actions[i])){
                actionIndex = i;
                break;
            }
        }
        /* проверка, нашла ли знак, или пользователь ввел другой.
        Проверка на минус единицу, тк если мы раннее нашли знак из массива,
        то переменная автоматом будет больше либо равна 0*/
        if(actionIndex==-1){
            System.out.println("Некорректное выражение");
            return;
        }
        /*Делю строчку, нахожу числа (разделитель - оператор).
        * regexActions - потому что некоторые знаки нужно экранировать, тк они имеют синтаксическую
        * значимость. */
        String[] data = message.split(regexActions[actionIndex]);

        try {
        a = Integer.parseInt(data[0]);
        b = Integer.parseInt(data[1]); } catch (NumberFormatException e) {System.out.println("Введите целое чилсло");}

        if (a >= 11 || a <= 0 || b >= 11 | b <= 0) {
            System.out.println("Неподходящие числа.");
            throw new Exception();
        }

        int result = 0;
        switch (actions[actionIndex]){
            case "+":
                result = a+b;
                break;
            case "-":
                result = a-b;
                break;
            case "*":
                result = a*b;
                break;
            default:
                result = a/b;
                break;
        }

        System.out.println("Ответ: " + result);
    }
    public static String calc(String input) {
        Scanner scn = new Scanner(System.in);
        System.out.println("Введите выражение без пробелов: целое число (от 1 до 10), знак оператора (+ - * /), второе число. Формат: 'число+число'.");
        input = scn.nextLine();

        message=input;
        return input;
    }
}
